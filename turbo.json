{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "*.tsbuildinfo"
      ],
      "env": [
        "DATABASE_URL",
        "SECRET", 
        "NEXT_PUBLIC_FRONTEND_URL",
        "PORT",
        "SESSION_NAME",
        "SESSION_SECRET",
        "ALLOWED_ORIGINS",
        "GOOGLE_PROJECT_ID",
        "GOOGLE_PUB_SUB_CREDENTIALS_PATH",
        "GOOGLE_PUB_SUB_CREDENTIALS_BASE64",
        "AUTH_RATE_LIMIT",
        "API_RATE_LIMIT",
        "CLOUDINARY_CLOUD_NAME",
        "CLOUDINARY_API_KEY",
        "CLOUDINARY_API_SECRET",
        "CLOUDINARY_UPLOAD_FOLDER"
      ]
    },
    "start": {    
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["PORT"]
    },
    "db:generate": {
      "cache": false
    },
    "db:reset": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  }
}